---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;

---
<BaseLayout pageTitle={frontmatter.title}>
 <div class="flex flex-col my-4  p-4">
  <div class=""><img class="object-cover h-48 w-96" src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} /></div>
  <p><em>{frontmatter.description}</em></p>
  <p>Written by: {frontmatter.author}</p>
  <p>{frontmatter.pubDate.slice(0,10)}</p>

  <div class="flex py-6  gap-4 justify-items-start ">
    {frontmatter.tags.map((tag) => (
      <p><a type="button" class="button text-slate-500 rounded-md p-2 py-2 border-2 bg-gradient-to-r from-slate-50 to-slate-100 border-slate-200 hover:border-teal-200" href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>

  <slot />
  </div>
</BaseLayout>
<style>
    a {
      color: #00539F;
    }
  
    .tags {
      display: flex;
      flex-wrap: wrap;
    }
  
    .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #F8FCFD;
    }
  </style>