---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';

const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "My Astro Learning Blog";
---

<BaseLayout pageTitle={pageTitle}>
      
        
        <p>This is where I will post about my journey learning Astro.</p>
        <ul role="list" class="divide-y divide-gray-200">
            {allPosts.map((post) => <BlogPost pubDate={post.frontmatter.pubDate.slice(0,10)} author={post.frontmatter.author} url={post.url} title={post.frontmatter.title} image={post.frontmatter.image.url} description={post.frontmatter.description} />)}
          </ul>
        </BaseLayout>
